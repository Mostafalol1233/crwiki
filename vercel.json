{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/client",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/server.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/server/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "dist/client/index.html"
    }
  ]
}
